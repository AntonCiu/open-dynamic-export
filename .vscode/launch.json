{
    "configurations": [
        {
            "command": "npm run dev",
            "name": "Run with tsx",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Docker: Attach to Node",
            "port": 9229,
            "continueOnAttach": true,
            "remoteRoot": "/app",
            "skipFiles": [
                // Node.js internal core modules
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ],
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Docker: Build and attach to Node",
            "port": 9229,
            "continueOnAttach": true,
            "remoteRoot": "/app",
            "preLaunchTask": "docker-compose debug",
            "skipFiles": [
                // Node.js internal core modules
                "<node_internals>/**",
                 "${workspaceFolder}/node_modules/**"
            ],
            "sourceMaps": true
        }
    ]
}
